<odoo>
    <!-- discount factor from computation date to retirement -->
    <record id="life_nex" model="ir.config_parameter">
        <field name="key">life.nex</field>
        <field name="value">0.193</field>
    </record>

    <!-- annuity factor for converting capital @ retirement into annuity -->
    <record id="life_annuityFactor" model="ir.config_parameter">
        <field name="key">life.annuityFactor</field>
        <field name="value">12.1</field>
    </record>

    <!-- orphan annuity factor to multiply by childer number -->
    <record id="life_orphanAnnuityFactor" model="ir.config_parameter">
        <field name="key">life.orphanAnnuityFactor</field>
        <field name="value">15.3</field>
    </record>

    <!-- qx for term insurance -->
    <record id="life_qx" model="ir.config_parameter">
        <field name="key">life.qx</field>
        <field name="value">0.00198</field>
    </record>
    
    <!-- digital precision for financial amounts -->
    <record model="decimal.precision" id="dp_fin_amount">
        <field name="name">Financial Amounts</field>
        <field name="digits">2</field>
    </record>
    
    <!-- digital precision for careeer computation -->
    <record model="decimal.precision" id="dp_career">
        <field name="name">Career</field>
        <field name="digits">2</field>
    </record>

</odoo>