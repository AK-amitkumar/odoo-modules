<openerp>
    <data>
        <!-- wizard action on res.partner -->
        <act_window id="policy_sheet_wizard_action"
            name="Policy Sheet Wizard"
            src_model="res.partner"
            res_model="life.policy.wizard"
            view_type="form" 
            view_mode="form"
            key2="client_action_multi" 
            target="new"
            groups="base.group_user" 
            context="{'insured_person_id': active_id}"/>
            
        <!-- wizard view -->
        <record id="wizard_view" model="ir.ui.view">
            <field name="name">Policy Sheet Wizard</field>
            <field name="model">life.policy.wizard</field>
            <field name="arch" type="xml">
                <form string="Policy Sheet Wizard">
                    <group>
                        <field name="insured_person_id" readonly="True"/>
                        <field name="policy_id" widget="selection"/>
                        <field name="reporting_date"/>
                        <field name="accomplished_career_duration" invisible="1"/>
                        <field name="life_earned_capital" invisible="1"/>
                        <field name="life_earned_annuity" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Generate" name="generate_policy_sheet" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- report -->
        <report 
            id="action_report_policy_sheet"
            model="life.report_policy_sheet"
            string="Policy Sheet"
            report_type="qweb-html"
            name="life.report_policy_sheet"
            file="life.report_policy_sheet"
            />
            
    </data>
</openerp>