<openerp>
    <data>
        <!-- wizard action on res.partner -->
        <act_window id="salary_wizard_action"
            name="Salary Wizard"
            src_model="res.partner"
            res_model="life.salary.wizard"
            view_type="form" 
            view_mode="form"
            key2="client_action_multi" 
            target="new"
            groups="base.group_user" 
            context="{'insured_person_id': active_id}"/>
            
        <!-- wizard view -->
        <record id="salary_wizard_view" model="ir.ui.view">
            <field name="name">Salary Wizard</field>
            <field name="model">life.salary.wizard</field>
            <field name="arch" type="xml">
                <form string="Salary Wizard">
                    <group col="4">
                        <field name="insured_person_id" readonly="True" colspan="4"/>
                        <group colspan="2" string="Current Salary">
                            <field name="current_pay_grid_id" />
                            <field name="current_grade" />
                            <field name="current_annual_pay" />
                        </group>
                        <group colspan="2" string="New Salary">
                            <field name="new_pay_grid_id" />
                            <field name="new_grade" />
                            <field name="new_annual_pay" />
                        </group>
                    </group>
                    <footer>
                        <button string="Adapt Salary" name="apply_salary" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>