<odoo>
    <template id="report_policy_sheet">
        <t t-call="report.html_container">
            <t t-set="data_report_margin_top" t-value="45" />
            <t t-set="data_report_header_spacing" t-value="40" />
            <t t-set="o" t-value="docs[0]" />
            <t t-call="report.external_layout">
                <!-- Intro -->
                <div id="introduction" class="page-header mt16">
                    <h1>Your Policy Information - <em t-esc="o.policy_id.name"/></h1>
                </div>
                <!-- Informations -->
                <div class="row mt32">
                    <div class="col-md-6 col-xs-6">
                        <div class="row">
                            <label class="col-sm-4 col-xs-4 text-right">Policy Holder:</label>
                            <div class="col-sm-8 col-xs-8">
                                <address t-field="o.policy_holder_id" t-field-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": true}' />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix" />
                    <div class="col-md-12 col-xs-12">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Personal data on <i t-field="o.reporting_date"/></strong></th>
                                    <th><strong></strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Sex:</td>
                                    <td><span t-field="o.policy_holder_id.sex" /></td>
                                </tr>
                                <tr>
                                    <td>Birthdate:</td>
                                    <td><span t-field="o.policy_holder_id.birthdate" /></td>
                                </tr>
                                <tr>
                                    <td>Family Status:</td>
                                    <td><span t-field="o.policy_holder_id.family_status" /></td>
                                </tr>
                                <tr>
                                    <td>Partner birthdate:</td>
                                    <td><span t-field="o.policy_holder_id.partner_birthdate" /></td>
                                </tr>
                                <tr>
                                    <td>Children:</td>
                                    <td><span t-field="o.policy_holder_id.children" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearfix" />
                    <div class="col-md-12 col-xs-12">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Computation Data on <i t-field="o.reporting_date"/></strong></th>
                                    <th><strong></strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Service from :</td>
                                    <td><span t-field="o.policy_holder_id.service_from" /></td>
                                </tr>
                                <tr>
                                    <td>Complete career duration:</td>
                                    <td><span t-field="o.policy_holder_id.complete_career_duration" /></td>
                                </tr>
                                <tr>
                                    <td>Accomplished career duration on <t t-esc="docs[0].reporting_date"/>:</td>
                                    <td><span t-field="o.accomplished_career_duration" /></td>
                                </tr>
                                <tr>
                                    <td>Annual Pay (100%):</td>
                                    <td><span t-field="o.policy_holder_id.annual_pay" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/></td>
                                </tr>
                                <tr>
                                    <td>Index</td>
                                    <td><span t-field="o.policy_holder_id.salary_index" /></td>
                                </tr>
                                <tr>
                                    <td>Final average annual pay (T5):</td>
                                    <td><span t-field="o.policy_holder_id.t5" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearfix" />
                    <div class="col-md-12 col-xs-12">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Life guarantee on <i t-field="o.reporting_date"/></strong></th>
                                    <th><strong/></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Current Earned Capital :</td>
                                    <td><span t-field="o.life_earned_capital" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}' /></td>
                                </tr>
                                <tr>
                                    <td>Current Earned Reserve :</td>
                                    <td><span t-field="o.life_earned_reserve" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}' /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
