<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="life_policy_form">
            <field name="name">life.policy.view</field>
            <field name="model">life.policy</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Policy">
                    <group col="4">
                        <field name="policy_holder_id" readonly="True" />
                        <field name="insured_person_id" readonly="True" />
                        <field name="number" />
                        <field name="death_number" />
                        <field name="life_type" />
                        <field name="death_type" />
                        <separator string="Policy Computed Amounts" colspan="4" />
                        <field name="term_year" /><newline/>
                        <field name="projected_life_capital" />
                        <field name="life_annuity"/>
                        <field name="orphan_annuity_capital"/>
                        <field name="oprhan_annuity"/>
                        <field name="death_capital"/>
                        <field name="death_unique_premium"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>