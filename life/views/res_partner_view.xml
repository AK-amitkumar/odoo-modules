<openerp>
	<data>
	
	    <!-- Add boolean for teacher, student, employee on partner form view -->
        <record id="view_partners_form_life" model="ir.ui.view">
            <field name="name">view.res.partner.form.life</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button string="Generate sheet" type="object" name="generate_sheet" class="oe_highlight"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                    <field name='employee_ident' attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}"/>
                    <field name='pay_grid_id' attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}"/>
                    <field name='grade_id' attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}"/>
                    <field name="supplier" invisible="True"/>
                    <field name="customer" invisible="True"/>
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="replace">
                    <page name="personnal_data" string="Personnal Data" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                        <group col="4">
                            <field name='sex'/>
                            <field name='birthdate'/>
                            <field name='family_status'/>
                            <field name='partner_birthdate'/>
                            <field name='children'/>
                        </group>
                    </page>
                    <page name="salary" string="Salary" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                        <group col="4">
                            <field name='service_from'/>
                            <field name='total_career'/>
                            <field name='annual_pay'/>
                            <field name='activity_percentage'/>
                            <field name='salary_index'/>
                        </group>
                    </page>
                    <page name="career_history" string="Career History" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                        <field name="career_history_ids">
                            <tree string="Career History">
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="pay_grid_id" />
                                <field name="grade_id" />
                                <field name="function" />
                                <field name="employer" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>