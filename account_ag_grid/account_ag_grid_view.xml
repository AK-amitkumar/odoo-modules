<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="assets_backend" name="account_ag_grid assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <!-- This is the javascript code for ag-Grid -->
                <script type="text/javascript" src="/account_ag_grid/static/lib/ag-grid/ag-grid.min.js"></script>
                <!-- This is the core css required for ag-Grid, manages the layout -->
                <link rel="stylesheet" type="text/css" href="/account_ag_grid/static/lib/ag-grid/ag-grid.min.css"></link>
                <link rel="stylesheet" type="text/css" href="/account_ag_grid/static/src/css/account.css"></link>
                <script type="text/javascript" src="/account_ag_grid/static/src/js/widgets.js"></script>
            </xpath>
        </template>
        
        <templates>
            <t t-name="ag_grid">
                <div class="oe_ag_grid">
                    <div class="ag_account"/>
                </div>
            </t>
        </templates>
		
        <record id="action_account_move_line_aggrid" model="ir.actions.client">
            <field name="name">Account Chart AgGrid</field>
            <field name="tag">account_move_line_aggrid_view</field>
            <field name="context">{}</field>
        </record>

		<menuitem name="Account Chart AgGrid" parent="account.menu_finance_entries" id="menu_account_move_line_aggrid" sequence="25" action="action_account_move_line_aggrid"/>
    </data>
</openerp>
