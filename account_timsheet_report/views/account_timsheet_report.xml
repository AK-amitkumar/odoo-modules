<openerp>
    <data>
        
        <menuitem id="menu_action_account_timesheet_report" name="Timesheet Report" parent="account.menu_finance_reports"/>
        
        <record id="action_account_timesheet_report" model="ir.actions.client">
            <field name="name">Timesheet Report</field>
            <field name="tag">account_report_generic</field>
            <field name="context" eval="{'url':'/account_reports/output_format/timesheet/1','model':'account.timesheet.report'}" />
        </record>
        
        <menuitem id="menu_action_account_timesheet_report_web" name="Timesheet Report Online" action="action_account_timesheet_report" parent="menu_action_account_timesheet_report"/>
        
        <!-- report -->
        <record id="account_timesheet_report_pdf_view" model="ir.ui.view">
            <field name="name">Timesheet Report PDF</field>
            <field name="model">account.timesheet.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Timesheet Report PDF">
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to" />
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight" /> or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    
        <report id="account_timesheet_report_pdf" 
                model="account.analytic.line" 
                string="Timesheet Report PDF" 
                report_type="qweb-pdf" 
                name="account_timsheet_report.report_tr_pdf_content" 
                file="account_timsheet_report.report_tr_pdf_content"
        />
    
        <record id="action_account_timesheet_report_pdf" model="ir.actions.act_window">
            <field name="name">Timesheet Report PDF</field>
            <field name="res_model">account.timesheet.report.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_timesheet_report_pdf_view" />
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_action_account_timesheet_report_pdf" name="Timesheet Report PDF" action="action_account_timesheet_report_pdf" parent="menu_action_account_timesheet_report"/>
        
        <template id="report_tr_pdf_content">
            <t t-call="report.html_container">
                <t t-foreach="data" t-as="item">
                    <t t-call="report.external_layout">
                    <div class="page" style="padding:200px 50px 50px 50px;">
                        <t t-set="line" t-value="item['lines'][0]"/>
                        <div style="position: absolute;top: 75px;left: 0;">
                            <img src="/account_invoice_pdf/static/src/img/gallys_logo.png"/>
                        </div>
                        <div style="position: absolute;top: 1050px;right:0;">
                            <img src="/account_invoice_pdf/static/src/img/gallys_logo_bottom.svg"/>
                        </div>
                        <div style="position: absolute;top: 705px;left: 0;z-index:-1;">
                            <img src="/account_invoice_pdf/static/src/img/gallys_logo_bottom_left.svg"/>
                        </div>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-7">
                                <address t-field="line.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                            </div>
                        </div>
                        <h2>
                            Relevé de prestations
                        </h2>
                        <div class="row mt32">
                            <div class="col-xs-4">
                                <strong>Période du :</strong>
                                <p t-esc="date_from.strftime('%d-%m-%Y')"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Au:</strong>
                                <p t-esc="date_to.strftime('%d-%m-%Y')"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Imprimé le :</strong>
                                <p t-esc="time.strftime('%d-%m-%Y')"/>
                            </div>
                        </div>
                    </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</openerp>