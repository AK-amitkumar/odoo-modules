<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_backend" name="google_drive documents" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
            	<script type="text/javascript" src="https://apis.google.com/js/api.js?onload=onApiLoad"></script>
                <script type="text/javascript" src="/document_gdrive/static/src/js/gdrive.js"></script>
            </xpath>
        </template>

        <record model='ir.actions.act_window' id='action_ir_attachment_add_gdrive'>
            <field name='name'>Add Google Drive</field>
            <field name='res_model'>ir.attachment.add_gdrive</field>
            <field name='type'>ir.actions.act_window</field>
            <field name='target'>new</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
        </record>

        <record model="ir.ui.view" id="view_ir_attachment_add_gdrive_form">
            <field name="name">ir.attachment.add_gdrive.form</field>
            <field name="model">ir.attachment.add_gdrive</field>
            <field name="arch" type="xml">
                <form string="Add Google Drive Doc" version="7.0">
                    <group>
                        <field name="name"/>
                        <field name="url" widget="url"/>
                    </group>
                    <footer>
                        <button name="action_add_url" string="Add" class="oe_highlight" type="object" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
