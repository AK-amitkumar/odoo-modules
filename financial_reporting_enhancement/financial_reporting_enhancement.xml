<openerp>
    <data>
        
        <menuitem name="Analytic" parent="account.menu_finance" id="menu_analytic" sequence="50"/>
        
        <record model="ir.ui.view" id="analytic_line_tree">
		    <field name="name">account.analytic.line.view</field>
		    <field name="model">account.analytic.line</field>
		    <field name="type">tree</field>
		    <field name="arch" type="xml">
		    	<tree toolbar="1" string="Analytic Lines" create="0">
		    	    <field name="date"/>
		    		<field name="account_id"/>
		        	<field name="general_account_id"/>
		        	<field name="move_id"/>
		        	<field name="amount"/>
		        </tree>
		    </field>
		</record>
		
		<record model="ir.ui.view" id="analytic_line_graph">
            <field name="name">account.analytic.line.graph</field>
            <field name="model">account.analytic.line</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <graph string="Analytic Summary">
                    <field name="account_id"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="action_analytic_line">
            <field name="name">Analytic Details</field>
            <field name="view_mode">tree</field>
            <field name="res_model">account.analytic.line</field>
        </record>

        <record model="ir.actions.act_window.view" id="action_analytic_line_view_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="analytic_line_tree"/>
            <field name="act_window_id" ref="action_analytic_line"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_analytic_line_view_graph">
            <field name="sequence" eval="2"/>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="analytic_line_graph"/>
            <field name="act_window_id" ref="action_analytic_line"/>
        </record>
        
        <menuitem name="Analytic Details" parent="menu_analytic" id="menu_analytic_details" sequence="10" action="action_analytic_line"/>
    </data>
</openerp>