<odoo>
    <template id="report_tax">
        <t t-call="report.html_container">
            <t t-set="data_report_margin_top" t-value="45" />
            <t t-set="data_report_header_spacing" t-value="40" />
            <t t-call="report.internal_layout">
                <div class="page">
                    <!-- Intro -->
                    <div id="introduction" class="page-header mt16">
                        <h2>TAXES SUR LA VALEUR AJOUTEE <small>(loi modifiée du 12.2.1979)</small></h2>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <h3>I. CALCUL DU CHIFFRE D'AFFAIRES IMPOSABLE</h3>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-xs-10">
                                A. Chiffre d'affaire global
                            </div>
                            <div class="col-xs-2 text-right">
                                0,00
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    1. Régime d'imposition
                                </div>
                                <div class="col-xs-3 col-xs-offset-1">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> Ventes
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-xs-offset-1">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" /> Recettes
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-10">
                                    2. Total des ventes/recettes
                                </div>
                                <div class="col-xs-2 text-right" style="padding-right:0">
                                    <t t-esc="turnover"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>